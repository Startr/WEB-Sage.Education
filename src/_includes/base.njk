<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width">
    {%- set siteUrl = (metadata and metadata.url)or 'https://sage.is' -%}
    {%- set baseTitle = title or(metadata and metadata.title)or 'Sage' -%}
    {%- set baseDescription = description or(metadata and metadata.description)or 'Sage puts all the AIs you need to get work done in one place.' -%}
    {%- set canonicalInput = canonical or page.url -%}
    {%- if canonicalInput -%}
      {%- set canonicalUrl = canonicalInput | absoluteUrl(siteUrl) -%}
    {%- else -%}
      {%- set canonicalUrl = siteUrl -%}
    {%- endif -%}
    {%- set seoDefaults = seo or {} -%}
    {%- set ogDefaults = seoDefaults.og or {} -%}
    {%- set twDefaults = seoDefaults.twitter or {} -%}
    {%- set og_title = (og and(og.title or og['og:title']))or ogDefaults.title or baseTitle -%}
    {%- set og_description = (og and(og.description or og['og:description']))or ogDefaults.description or baseDescription -%}
    {%- set og_image_rel = (og and(og.image or og['og:image']))or ogDefaults.image or '/assets/images/opengraph/sage.png' -%}
    {%- set og_image = og_image_rel | absoluteUrl(siteUrl) -%}
    {%- set og_type = (og and(og.type or og['og:type']))or ogDefaults.type or 'website' -%}
    {%- set twitter_title = (twitter and(twitter.title or twitter['twitter:title']))or twDefaults.title or og_title -%}
    {%- set twitter_description = (twitter and(twitter.description or twitter['twitter:description']))or twDefaults.description or og_description -%}
    {%- set twitter_image_rel = (twitter and(twitter.image or twitter['twitter:image']))or twDefaults.image or og_image_rel -%}
    {%- set twitter_image = twitter_image_rel | absoluteUrl(siteUrl) -%}
    {%- set twitter_card = (twitter and(twitter.card or twitter['twitter:card']))or twDefaults.card or 'summary_large_image' -%}
    {%- set twitter_creator = (twitter and(twitter.creator or twitter['twitter:creator']))or twDefaults.creator or '@sage' -%}
    {%- set twitter_site = (twitter and(twitter.site or twitter['twitter:site']))or twDefaults.site or '@sage' -%}
    {%- set twitter_image_alt = (twitter and(twitter['image:alt'] or twitter.image_alt or twitter['twitter:image:alt']))or twDefaults.image_alt or 'Sage' -%}
    <title>{{ baseTitle }}</title>
    <meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta name="handheldfriendly" content="true">
    <meta name="viewport" content="initial-scale=1, width=device-width">
    <meta name="description" content="{{ baseDescription }}">
    <meta name="robots" content="noodp">

    <meta property="og:site_name" content="{{ metadata and metadata.name or 'Sage' }}">
    <meta property="og:title" content="{{ og_title }}">
    <meta property="og:description" content="{{ og_description }}">
    <meta property="og:image" content="{{ og_image }}">
    <meta property="og:url" content="{{ canonicalUrl }}">
    <meta property="og:type" content="{{ og_type }}">

    <meta name="twitter:title" content="{{ twitter_title }}">
    <meta name="twitter:description" content="{{ twitter_description }}">
    <meta name="twitter:image" content="{{ twitter_image }}">
    <meta name="twitter:card" content="{{ twitter_card }}">
    <meta name="twitter:creator" content="{{ twitter_creator }}">
    <meta name="twitter:site" content="{{ twitter_site }}">
    <meta name="twitter:image:alt" content="{{ twitter_image_alt }}">

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "{{ canonicalUrl }}"
        },
        "name": "{{ baseTitle | replace('" ', ' \\ "') }}",
        "headline": "{{ baseTitle | replace('" ', ' \\ "') }}",
        "description": "{{ baseDescription | replace('" ', ' \\ "') }}",
        "url": "{{ canonicalUrl }}",
        "image": "{{ og_image }}"
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Sage",
        "url": "{{ siteUrl }}"
      }
    </script>

    <link rel="canonical" href="{{ canonicalUrl }}">

    {%- include "components/site-icons.njk" -%}
    {%- include "components/site-styles.njk" -%}

    <script>
      phrase = [
        {
          "phrase": "Private by Design"
        }, {
          "phrase": "Powerful by Nature"
        }, {
          "phrase": "Effortlessly Smart"
        }, {
          "phrase": "Educational and Engaging"
        }, {
          "phrase": "refreshingly simple"
        }, {
          "phrase": "wonderfully efficient"
        }, {
          "phrase": "simply powerful"
        }, {
          "phrase": "down-to-earth"
        }
      ];
    </script>

  {%- include "components/site-scripts.njk" -%}

  </head>

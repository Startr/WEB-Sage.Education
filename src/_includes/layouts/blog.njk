{% extends "base.njk" %}

{% block nav %}
    <input id="nav-active" type="checkbox">

    <label id="nav-underlay" for="nav-active"></label>

    <nav class="nav" style="zoom: 1.2;     --p: 0.4rem">
        <div class="nav__container">
            <div class="nav__logo">
                <a href="/" class="icon icon--sage" aria-label="Sage">
                    <img src="/assets/images/general/sage.webp" style="--w:2em; --h:2em; --m:-0.4em 0"
                    alt="Sage Startr Logo">
                    <strong>Sage.Education</strong>
                </a>
                <div class="nav__phrase">is <span class="highlight"></span>
                </div>
            </div>
            <div class="nav__links" style="gap:1em">
                {# Data-driven main navigation #}
                {% for item in navigation.main %}
                    {% if item.todo %}
                        {% set note = item.todo_note or "" %}
                        {% todo note %}
                        <a href="{{ item.href }}">{{ item.title }}</a>{% endtodo %}
                    {% else %}
                        <a href="{{ item.href }}">{{ item.title }}</a>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="nav__buttons">
                <a class="nav__button nav__button--sage" href="https://sage.Startr.Cloud/" target="_blank">Sign in</a>
                <a class="nav__button nav__button--signup" href="/Sign-up-Now" aria-label="Sign up free">
                    <span style="--d:none; --d-md:inline-block">Apply to&nbsp;</span> Access Sage.Education</a>
            </div>
            <label class="nav__toggle" for="nav-active" aria-label="Nav Toggle" tabindex="0"></label>
        </div>
        <div class="nav__mobile">
            {% for item in navigation.main %}
                {% if item.todo %}
                    {% set note = item.todo_note or "" %}
                    {% todo note %}
                    <a href="{{ item.href }}">{{ item.title }}</a>{% endtodo %}
                {% else %}
                    <a href="{{ item.href }}">{{ item.title }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </nav>
{% endblock %}

{% block main %}
<main class="main" style="zoom:1.2">
<section class="wow fadeIn" style="
	--m: 2em auto;	
	--bg:white;
	--p:1.8em 3em;
	--br:12px;
	--shadow:5;
	zoom:1.2;	
	outline:#e6e6e6 dashed;
	outline-offset: -0.6em;
	--b-width:2px;
	--w:80%;
	--maxw:66rem;
	--ai:center;">
	<h1>{{ title }}</h1>

	<ul class="post-metadata">
		<time
			style="--c:black; --bgc:inherit;"
			datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
		{%- if page.data.author %}<li>Author: {{ page.data.author }}</li>{%- endif %}
		{%- for tag in tags | filterTagList %}
		{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<!--<li style="--ml:2rem"><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}
		</li>-->
		{%- endfor %}
	</ul>

	{{ content | safe }}
</section>
{%- if collections.all %}
<section class="wow fadeIn" style="
	  --m: 2rem auto;	
	  --bg:white;
	  --p:3em;
	  --br:12px;
	  --shadow:5;
	  outline:#e6e6e6 dashed;
	  outline-offset: -0.6em;
	  --b-width:2px;
	  --w:40%;
	  --maxw:44rem;
	  --ai:center;
	  zoom:1.2;">
	{%- set previousPost = collections.all | getPreviousCollectionItem(page) %}
	{%- set nextPost = collections.all | getNextCollectionItem(page) %}
	{%- if nextPost or previousPost %}
	<ul class="links-nextprev">
		{%- if previousPost and previousPost.data.title %}<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>
		{% endif %}
		{%- if nextPost and nextPost.data.title %}<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
	</ul>
	{%- endif %}
</section>
{%- endif %}
</main>
{% endblock %}
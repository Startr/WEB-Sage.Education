---
layout: layouts/base.njk
title: Blog
description: Latest articles and posts
eleventyNavigation:
  key: Blog
  order: 3
---

<div class="container" style="
  --m: 1em auto;
  --d:flex;
  --fd:column;
  --ai:center;
  --bg:white;">
  <h1><strong>{{ title }}</strong></h1>

  <h2>Latest Posts</h2>
  {% set postslist = collections.posts %}
  {% if postslist.length > 0 %}
    <ul class="posts-list">
      {%- for post in postslist -%}
        {% if post.data.title and 'GitHub' not in post.data.tags %}
        <li class="post-item"  class="wow fadeIn" style="
	--m: 1em auto;
  --scale-hvr:102%;
	--bg:white;
	--p:3em;
	--br:12px;
	--shadow:5;
	outline:#e6e6e6 dashed;
	outline-offset: -0.6em;
	--b-width:2px;
	--w:80%;
	--maxw:66rem;
	--ai:center;">
          <h2 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          <time class="post-date" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
          {% if post.data.description %}
            <p class="post-description">{{ post.data.description }}</p>
          {% elseif post.data.summary %}
            <p class="post-description">{{ post.data.summary }}</p>
          {% endif %}
          {% if post.data.tags %}
            <div class="post-tags">
              {% for tag in post.data.tags | filterTagList %}
                <a href="/tags/{{ tag | slugify }}/" class="post-tag">{{ tag }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </li>
        {% endif %}
      {%- endfor -%}
    </ul>
  {% else %}
    <p>No posts found in this section.</p>
  {% endif %}

  <h2>Github Posts</h2>
  {% if postslist.length > 0 %}
    <ul class="posts-list">
      {%- for post in postslist -%}
        {% if post.data.title and 'GitHub' in post.data.tags %}
        <li class="post-item"  class="wow fadeIn" style="
	--m: 1em auto;
  --scale-hvr:102%;
	--bg:white;
	--p:3em;
	--br:12px;
	--shadow:5;
	outline:#e6e6e6 dashed;
	outline-offset: -0.6em;
	--b-width:2px;
	--w:80%;
	--maxw:66rem;
	--ai:center;">
          <h2 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          <time class="post-date" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
          {% if post.data.description %}
            <p class="post-description">{{ post.data.description }}</p>
          {% elseif post.data.summary %}
            <p class="post-description">{{ post.data.summary }}</p>
          {% endif %}
          {% if post.data.tags %}
            <div class="post-tags">
              {% for tag in post.data.tags | filterTagList %}
                <a href="/tags/{{ tag | slugify }}/" class="post-tag">{{ tag }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </li>
        {% endif %}
      {%- endfor -%}
    </ul>
  {% else %}
    <p>No Github posts found.</p>
  {% endif %}
</div>

<style>
  .posts-list {
    list-style: none;
    padding: 0;
  }
  
  .post-item {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .post-title {
    margin-bottom: 0.5rem;
  }
  
  .post-date {
    display: block;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.5rem;
  }
  
  .post-description {
    margin-top: 0.5rem;
  }
  
  .post-tags {
    margin-top: 0.5rem;
  }
  
  .post-tag {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.2rem 0.5rem;
    margin-right: 0.5rem;
    border-radius: 3px;
    font-size: 0.8rem;
    text-decoration: none;
    color: #666;
  }
</style>
